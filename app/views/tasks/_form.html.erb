<%= simple_form_for  [@project, @sprint ,@sprint.tasks.new] do |f| %>
    
  <div class="form-group">
    <%= f.input :name, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= f.input :state_task, :collection => { 'DEV' => 0,'QA' => 1, 'FINISHED' => 2}, :multiple => true, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.input :type_task, class: "form-control" %>
  </div>
   
  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
