<div class="col-md-12 col-sm-12 colcol-xs-12 blog-content">
  <h2 class="text-center"><%= @project.name %></h2>
  
  <!--div><%#= raw @project.details %></div-->
  <!--h5 class="text-center"><%#= @project.created_at.strftime('%b %d, %Y') %></h5-->
  <div><%= 'Updated: '+@project.updated_at.strftime('%b %d, %Y') %></div>
  <% if user_signed_in? %>
    <div class="links-show">
      <%= link_to 'Edit', edit_project_path(:id => @project) %> |
      <%= link_to 'Back', projects_path %>
    </div>
  <% end %>
  <%#= link_to 'Add New Sprint', new_project_sprint_path(@project), class: 'btn btn-primary', id: 'new_sprint' %>
  <div id="sprint-list"> <%= render 'sprints/sprints'%></div>
  <div id="form-sprints" class="center-div col-md-6 col-sm-6 col-xs-12">
  <%= render 'sprints/form'%>
  </div> 
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $( '#new_sprint' ).click(function(e) {
      e.preventDefault();
      $('#form-sprints').toggle('slow',function(){
      $('#sprint_name').focus();
      });  
    });
    var divWidth = $('.center-div').width();
    var windowWidth = $(window).width();
    $('#form-sprints').css({'left': (windowWidth-divWidth)/2 })
  });
</script>
