<div class="col-md-12">
  <div class="glyphicon glyphicon-remove-circle close-forms"></div> 
  <%= simple_form_for [@project, @project.sprints.build] , :remote => true do |f| %>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :name, value:'Sprint', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.hidden_field :owner_sprint, value:current_user.email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.input :state, :collection => { 'ACTIVE' => 0,'CLOSED' => 1, 'PAUSED' => 2}, :multiple => true, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.input :begin_sprint, :order => [:day, :month, :year], :discard_hour => true, :discard_minute => true, class: "form-control" %>
      </div>

       <div class="form-group">
        <%= f.input :end_sprint, :order => [:day, :month, :year], :discard_hour => true, :discard_minute => true,  class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
       <%= f.input :hours, class: "form-control" %>
      </div>

      <div class="form-group">
       <%= f.input :number_tasks, class: "form-control" %>
      </div>

      <div class="form-group">
       <%= f.input :num_compromised_points, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>
<script type="text/javascript">
  $('.close-forms').click(function(){
    
    $('#form-sprints').css({'display':'none'});
  })
</script>